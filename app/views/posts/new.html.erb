<div class="row ctr">
	<div class="medium-12 columns">
		<h2><%= @school.name %></h2>
	</div>
</div>

<div class="row ctr">
	<div class="medium-12 columns">
		<h3><%= @course.name %></h3>
	</div>
</div>


<div class="row">
	<div class="medium-12 columns">
		<h4>Create a new post for this course</h4>
		<div class="pad5">
			<%= form_for([@school,@course,@course.posts.build]) do |f| %>
			  <p><%= f.text_field :title, :size => 40, :placeholder => "Title"   %></p>

			  <p><%= f.text_area :description, size: "60x12", :placeholder => "Description"   %></p>

			  <p><%= f.submit 'Create a New Post', class: 'button medium'  %></p>
			<% end %>
		</div>
	</div>
</div>
